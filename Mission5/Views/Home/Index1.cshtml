@{
    ViewData["Title"] = "Cost Calculator";
}

<h2>Tutoring Cost Calculator</h2>

<div class="form-group">
    <label for="hoursInput">Hours needed</label>
    <input id="hoursInput"
           class="form-control"
           type="number"
           step="0.25"
           min="0"
           placeholder="Enter a positive number (e.g., 2 or 1.5)" />
    <small id="hoursError" class="text-danger" style="display:none;"></small>
</div>

<div class="form-group">
    <label for="rateInput">Rate (per hour)</label>
    <input id="rateInput"
           class="form-control"
           type="text"
           value="35"
           readonly />
</div>

<div class="form-group">
    <button id="calcBtn" type="button" class="btn btn-primary">
        Calculate total
    </button>
</div>

<div class="form-group">
    <label for="totalOutput">Total</label>
    <input id="totalOutput"
           class="form-control"
           type="text"
           readonly />
</div>

<div class="form-group">
    @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-link" })
</div>

@section Scripts {
    <script src="~/js/Calculator.js" asp-append-version="true"></script>
}
